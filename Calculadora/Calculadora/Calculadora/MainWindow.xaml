        <Button Content="-" HorizontalAlignment="Left" Margin="9,145,0,0" VerticalAlignment="Top" Width="38" Height="38" Click="ISubtrair"/>
        <Button Content="*" HorizontalAlignment="Left" Margin="52,188,0,0" VerticalAlignment="Top" Width="38" Height="38" RenderTransformOrigin="0.51,0.256" Click="IMultiplicar"/>

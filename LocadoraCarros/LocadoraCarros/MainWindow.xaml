<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LocadoraCarros" x:Class="LocadoraCarros.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="517">
            <ComboBox Width="120" SelectionChanged="ComboBox_SelectionChanged_1">
                <Button Content="Novo Cliente"/>
                <Button Content="Todos Clientes"/>
            </ComboBox>
            <ComboBox Width="120" SelectionChanged="ComboBox_SelectionChanged_2">
                <Button>
                    <Button.DataContext>
                        <local:CadastroCarro/>
                    </Button.DataContext>
                </Button>
                <Button Content="Todos os carros"/>
            </ComboBox>
            <ComboBox Width="120" SelectionChanged="ComboBox_SelectionChanged_3"/>
        </Menu>
    </Grid>
</Window>
